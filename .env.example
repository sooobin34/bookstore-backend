# -----------------------------
# Flask Runtime Environment
# -----------------------------
FLASK_ENV=development

# Secret Keys (실제 값은 .env에만 저장)
SECRET_KEY=secret-key
JWT_SECRET_KEY=jwt-secret-key


# =============================
# Database Configuration
# =============================
# 로컬 개발용 예시 (MySQL)
SQLALCHEMY_DATABASE_URI=mysql+pymysql://root:your-password@localhost:3306/bookstore_db

# JCloud 서버용 예시 (실제 값은 .env에만)
# SQLALCHEMY_DATABASE_URI=mysql+pymysql://username:password@<JCLOUD-IP>:3306/bookstore_prod


SQLALCHEMY_TRACK_MODIFICATIONS=False


# =============================
# JCloud Deployment (Optional)
# =============================
# 서버가 어떤 포트에서 실행될지 지정
JCLOUD_HOST=0.0.0.0
JCLOUD_PORT=8000

# JCloud 접근용 Key File 경로(예시값)
JCLOUD_SSH_KEY_PATH=/path/to/your-key.pem


# =============================
# Rate Limiting
# =============================
RATELIMIT_DEFAULT=100 per minute


# =============================
# Swagger / API Docs
# =============================
API_TITLE=Bookstore API
API_VERSION=1.0.0


# =============================
# Optional Feature Flags (기타)
# =============================
ENABLE_SEEDING=false
ENABLE_DEBUG_LOGGING=true
